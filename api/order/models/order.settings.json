{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "sub_total": {
      "type": "float",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "ESPERA",
        "PROCESO",
        "TRANSITO",
        "ENTREGADO",
        "CONCRETADO",
        "CANCELADO"
      ],
      "required": true
    },
    "approved_at": {
      "type": "date",
      "required": true
    },
    "user": {
      "via": "orders",
      "plugin": "users-permissions",
      "model": "user"
    },
    "order_stocks": {
      "collection": "order-stock",
      "via": "order"
    }
  }
}
